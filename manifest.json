{
  "manifest_version": 3,
  "name": "Box AI for Chrome",
  "version": "1.1.4",
  "description": "Ask questions about the selected texts using the Box AI API.",
  "permissions": [
    "storage",
    "identity",
    "contextMenus",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon128.png",
      "32": "images/icon128.png",
      "48": "images/icon128.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon128.png",
    "32": "images/icon128.png",
    "48": "images/icon128.png",
    "128": "images/icon128.png"
  },
  "options_page": "settings/options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["chat/chat.css"],
      "js": ["content.js", "chat/chat.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["chat/chat.html", "chat/chat.js", "chat/chat.css", "images/icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}