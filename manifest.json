{
  "manifest_version": 3,
  "name": "Box AI for Chrome",
  "version": "1.0",
  "description": "選択したテキストをMarkdownにしてBoxにアップロードします",
  "permissions": [
    "storage",
    "identity",
    "contextMenus",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_page": "settings/options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "*://*/*"
  ]
}